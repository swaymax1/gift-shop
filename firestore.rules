rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /products/{document=**} {
      allow write: if request.auth != null && request.auth.uid == "7eRQlYXs0VOh6VSNftN1DATnVus2"
      allow read: if true;
    }
    match /orders/{document=**} {
      allow write: if true;
      allow read: if request.auth != null && request.auth.uid == "7eRQlYXs0VOh6VSNftN1DATnVus2"
    }
    match /users/{document=**} {
    	allow write: if true;
      allow read: if true;
    }
  }
}